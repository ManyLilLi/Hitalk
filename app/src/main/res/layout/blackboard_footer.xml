<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bb_frame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <com.vivifram.second.hitalk.ui.view.CircleProgressBar
            android:id="@+id/bb_footer_progressbar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:mlpb_progress_stoke_width="2dp"
            app:mlpb_progress_color="@color/hitalk_yellow"
            app:mlpb_enable_circle_background="false"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bb_footer_text"
            android:layout_toStartOf="@+id/bb_footer_text"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/bb_footer_arrow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bb_footer_text"
            android:layout_toStartOf="@+id/bb_footer_text"
            android:adjustViewBounds="true"
            android:rotation="180"/>


        <TextView
            android:id="@+id/bb_footer_text"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="上拉加载" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bb_footer_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:adjustViewBounds="true"/>
</LinearLayout>