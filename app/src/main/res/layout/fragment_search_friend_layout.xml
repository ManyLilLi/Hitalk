<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vivifram.second.hitalk.ui.springview.widget.SpringView
        android:id="@+id/searchSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:give="both"
        app:type="follow">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchRtRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.vivifram.second.hitalk.ui.springview.widget.SpringView>


    <com.mypopsy.widget.FloatingSearchView
        android:id="@+id/fSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="#90000000"
        android:hint="@string/searcg_hint"
        app:fsv_menu="@menu/search" />

</android.support.design.widget.CoordinatorLayout>
