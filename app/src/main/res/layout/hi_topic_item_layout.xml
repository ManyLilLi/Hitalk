<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/divider_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <com.vivifram.second.hitalk.ui.view.RoundImageView
            android:id="@+id/topicIconIv"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/hot_1" />

        <TextView
            android:id="@+id/topicTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:text="@string/hot_demo_1"
            android:textColor="@color/black_deep"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/topicDetailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="34dp"
            android:text="@string/hot_demo_2"
            android:textColor="@color/color_ababab"
            android:textSize="13dp" />

    </RelativeLayout>

</LinearLayout>