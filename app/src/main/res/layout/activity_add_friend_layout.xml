<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eeeeee">

    <com.vivifram.second.hitalk.ui.view.BGATitlebar
        android:id="@+id/titleBar"
        style="@style/TitleBar"
        android:background="@color/colorWhite"
        app:bgatitlebar_leftDrawable="@drawable/back"
        app:bgatitlebar_leftDrawablePadding="10dp"
        app:bgatitlebar_rightDrawable="@drawable/qr"
        app:bgatitlebar_rightDrawablePadding="20dp"
        app:bgatitlebar_titleText="@string/title_add_friend"
        app:bgatitlebar_titleTextColor="@color/color_272636" />


    <LinearLayout
        android:id="@+id/searchLt"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|left"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/search_f"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/mobile_HitalkNumber"
            android:textSize="16sp"
            />

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/scanQrRl"
        style="@style/commonItem_style"
        android:paddingLeft="8dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="32dp"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/scanqr"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_deep"
            android:text="@string/scanqr"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_normal"
            android:text="@string/scanqr_des"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="32dp"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/detail_arrow"
            style="@style/detail_arrow_style" />

    </RelativeLayout>

    <View
        style="@style/normal_line"
        />
    <RelativeLayout
        android:id="@+id/addressRl"
        style="@style/commonItem_style"
        android:paddingLeft="8dp"
        android:background="@color/colorWhite"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/addressbook"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_deep"
            android:text="@string/phonecontacts"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_normal"
            android:text="@string/phonecontacts_des"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="32dp"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/detail_arrow"
            style="@style/detail_arrow_style" />

    </RelativeLayout>


</LinearLayout>