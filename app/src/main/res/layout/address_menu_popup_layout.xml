<?xml version="1.0" encoding="utf-8"?>
<com.vivifram.second.hitalk.ui.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuBubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:bl_arrowDirection="top"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="90dp"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="6dp"
    app:bl_strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addFriendTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@color/black_deep"
            android:text="@string/add_friend"
            />

        <View
            style="@style/normal_line"
            />

        <TextView
            android:id="@+id/createGroupTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black_deep"
            android:text="@string/create_group"
            />

    </LinearLayout>


</com.vivifram.second.hitalk.ui.bubble.BubbleLayout>